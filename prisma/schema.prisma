generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    // Base
    id Int @id @default(autoincrement())

    name            String
    email           String @unique
    hashed_password String @db.VarChar(255)

    // Utils
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
}

model Post {
    // Base
    id    Int    @id @default(autoincrement())
    title String

    // Utils
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
}
