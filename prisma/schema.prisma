generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    ADMIN
    USER
}

model User {
    // Base
    id Int @id @default(autoincrement())

    name           String
    email          String @unique
    hashedPassword String @db.VarChar(255)
    role           Role   @default(USER)

    // Utils
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Post {
    // Base
    id    Int    @id @default(autoincrement())
    title String

    // Utils
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
